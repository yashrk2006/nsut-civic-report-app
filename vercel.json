{
    "buildCommand": "npm run build",
    "outputDirectory": "frontend/dist",
    "cleanUrls": true,
    "rewrites": [
        {
            "source": "/((?!assets|manifest.json|icon-.*\\.png).*)",
            "destination": "/index.html"
        }
    ],
    "headers": [
        {
            "source": "/assets/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        }
    ]
}